<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <RelativeLayout
        android:id="@+id/real1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f7f8fc">

        <ImageView
            android:id="@+id/dialog_face_toi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/facebook_back_pressed"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_toRightOf="@+id/dialog_face_toi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share With"
            android:textSize="8pt"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>



    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_below="@+id/real1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eff0f4"/>

    <RelativeLayout
        android:id="@+id/toi"
        android:layout_below="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f7f8fc">

        <TextView
            android:id="@+id/txttoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tới:"
            android:textColor="#9c9d9f"
            android:textSize="7pt"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/toick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/notifion"
            android:layout_toRightOf="@+id/txttoi"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Công khai"
            android:textSize="7pt"
            android:layout_toRightOf="@+id/toick"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/loaick"
        android:layout_below="@+id/toi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ListView>


</RelativeLayout>
