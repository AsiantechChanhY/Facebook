<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <RelativeLayout
        android:id="@+id/real1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f7f8fc">

        <ImageView
            android:id="@+id/dialog_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/facebook_back_pressed"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_toRightOf="@+id/dialog_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Viết bài"
            android:textSize="8pt"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>



    <View
        android:id="@+id/viewcach"
        android:layout_width="0.1dp"
        android:layout_height="40dp"
        android:background="#9c9d9f"
        android:layout_toLeftOf="@+id/realdang"
        android:layout_centerVertical="true"/>

        <RelativeLayout
            android:id="@+id/realdang"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ĐĂNG"
            android:textColor="#9c9d9f"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_below="@+id/real1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eff0f4"/>

    <RelativeLayout
        android:id="@+id/toi"
        android:layout_below="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f7f8fc">

        <TextView
            android:id="@+id/txttoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tới:"
            android:textColor="#9c9d9f"
            android:textSize="7pt"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/toick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/notifion"
            android:layout_toRightOf="@+id/txttoi"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Công khai"
            android:textSize="7pt"
            android:layout_toRightOf="@+id/toick"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chevron_right_light_grey_m"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toi"
        android:hint="Bạn đang nghĩ gì?"
        android:textSize="7pt"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:background="#00ffffff"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/composer_photo"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/composer_people"
            android:layout_toRightOf="@+id/img1"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/composer_minutiae"
            android:layout_toRightOf="@+id/img2"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/img4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/composer_place"
            android:layout_toRightOf="@+id/img3"
            android:layout_marginLeft="20dp"/>


    </RelativeLayout>

</RelativeLayout>
